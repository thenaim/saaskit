{
  "extends": "@repo/typescript-config/nestjs.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "jsx": "react-jsx"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
